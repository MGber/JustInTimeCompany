@using Castle.Core.Internal
@model JustInTimeCompany.Models.ViewModels.ReservationViewModel

@{
    ViewData["Title"] = "Delete";
}
@if (!(TempData["message"] as string).IsNullOrEmpty())
{
    <p class="fs-4 text-danger">@TempData["message"]</p>
}
else
{
    <p class="fs-4 text-danger">Are you sure you want to delete this reservation ?</p>
}

<div>
    <table class="table table-light">
        <thead>
        <tr class="align-middle text-center">
            <th>Seats</th>
            <th>From</th>
            <th>To</th>
            <th>Departure</th>
            <th>Arrival</th>
        </tr>
        </thead>
        <tbody>
            <tr class="align-middle text-center">
                <th class="align-middle">@Model.Reservation.SeatAmount</th>
                <th>@Model.Flight.From.Name</th>
                <th>@Model.Flight.To.Name</th>
                <th>@Model.Flight.ScheduledDeparture</th>
                <th>@Model.Flight.ScheduledArrival</th>
            </tr>
            </tbody>
    </table>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReservationId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <button onclick="location.href = '@Url.Action("Index", "Reservations")'" type="button" class="btn btn-outline-info">Cancel</button>
    </form>
</div>
